{% style %}
  .find-more--{{ section.id }}{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .find-more__title--{{ section.id }} {
    margin-bottom: 22px;
    color: {{ settings.color_body_text }};
    font-size: {{ settings.type_base_size }}px;
    line-height: {{ settings.type_base_line_height }};
  }
  @media( min-width: 769px ) {
    .find-more__links--{{ section.id }} {
      display: flex;
      flex-direction: row;
    }
  }
  .find-more__links-item--{{ section.id }} {
    margin: 0 16px 16px;
    display: flex;
    align-items: center;
  }
  .find-more__links-item--{{ section.id }} h6 {
    margin: 0;
  }
  .find-more__links-item--{{ section.id }} svg {
    margin-right: 8px;
  }
{% endstyle %}

<div class="page-width {% if section.settings.margin_top %} promo-grid--space-top {% endif %} {% if section.settings.margin_bottom %} promo-grid--space-bottom {% endif %}">
  <div class="find-more--{{ section.id }}">
    {%- if section.settings.text != blank -%}
      <p class="find-more__title--{{ section.id }}">
        {{ section.settings.text }}
      </p>
    {%- endif -%}
    <div class="find-more__links--{{ section.id }}">
      {% if settings.social_tiktok_link %}
        <a href="{{ settings.social_tiktok_link }}" class="find-more__links-item--{{ section.id }}">
          <svg width="16" height="19" viewBox="0 0 16 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M15.991 4.56A4.6 4.6 0 0 1 11.386 0H8.412v8.125l-.003 4.45a2.691 2.691 0 0 1-2.848 2.687 2.68 2.68 0 0 1-1.231-.378 2.691 2.691 0 0 1-1.316-2.268 2.694 2.694 0 0 1 3.546-2.594V7.003a5.851 5.851 0 0 0-.857-.064 5.702 5.702 0 0 0-4.285 1.916A5.578 5.578 0 0 0 .011 12.22a5.57 5.57 0 0 0 1.66 4.34 5.703 5.703 0 0 0 4.032 1.65 5.683 5.683 0 0 0 4.032-1.65 5.567 5.567 0 0 0 1.67-3.961l-.015-6.646A7.516 7.516 0 0 0 16 7.52V4.56h-.009Z" fill="#131516"/></svg>
          <h6>Tik tok</h6>
        </a>
      {% endif %}
      {% if settings.social_pinterest_link %}
        <a href="{{ settings.social_pinterest_link }}" class="find-more__links-item--{{ section.id }}">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 .48C5.639.48.48 5.638.48 12c0 6.362 5.158 11.52 11.52 11.52 6.363 0 11.52-5.158 11.52-11.52C23.52 5.638 18.363.48 12 .48Zm.789 14.25c-.74-.056-1.049-.422-1.627-.773-.318 1.67-.707 3.27-1.86 4.107-.356-2.525.522-4.419.93-6.431-.695-1.17.083-3.523 1.549-2.945 1.803.715-1.563 4.35.697 4.805 2.36.473 3.323-4.095 1.86-5.578-2.114-2.144-6.152-.049-5.656 3.02.12.75.897.979.31 2.014-1.352-.3-1.757-1.367-1.704-2.789.083-2.328 2.092-3.958 4.105-4.183 2.548-.283 4.938.935 5.27 3.333.37 2.704-1.151 5.631-3.874 5.42Z" fill="#131516"/></svg>
          <h6>Pinterest</h6>
        </a>
      {% endif %}
      {% if settings.social_youtube_link %}
        <a href="{{ settings.social_youtube_link }}" class="find-more__links-item--{{ section.id }}">
          <svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M19.543 2.498C20 4.28 20 8 20 8s0 3.72-.457 5.502c-.254.985-.997 1.76-1.938 2.022C15.896 16 10 16 10 16s-5.893 0-7.605-.476c-.945-.266-1.687-1.04-1.938-2.022C0 11.72 0 8 0 8s0-3.72.457-5.502c.254-.985.997-1.76 1.938-2.022C4.107 0 10 0 10 0s5.896 0 7.605.476c.945.266 1.687 1.04 1.938 2.022ZM8 11.5 14 8 8 4.5v7Z" fill="#131516"/></svg>
          <h6>Youtube</h6>
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Find more on",
  "class": "index-section",
  "settings": [
    {
    "type": "text",
    "id": "text",
    "label": "Text"
    },
    {
      "type": "checkbox",
      "id": "margin_top",
      "label": "Add padding top"
    },
    {
      "type": "checkbox",
      "id": "margin_bottom",
      "label": "Add padding bottom"
    }
  ],
  "presets": [{
    "name": "Find more on"
  }]
}
{% endschema %}